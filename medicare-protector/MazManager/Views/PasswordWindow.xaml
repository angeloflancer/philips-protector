<Window x:Class="MazManager.Views.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zregi Terminator" 
        Height="340" Width="380"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <!-- Custom Window Border with rounded corners -->
    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="8" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1"
            Margin="5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Zregi Terminator" 
                               Foreground="White" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0"/>
                    
                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,5,0">
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                Width="30" Height="26"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="12"
                                Click="CloseButton_Click"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Authentication Required" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Please enter the password to continue" 
                               FontSize="11" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Password Input Card -->
                <Border Grid.Row="1" Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <TextBlock Text="Password" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,6"/>

                        <Grid Height="32">
                            <PasswordBox x:Name="PasswordInput" 
                                         FontSize="13"
                                         VerticalContentAlignment="Center"
                                         Padding="8,0"
                                         KeyDown="PasswordInput_KeyDown"/>
                            <TextBox x:Name="PasswordTextBox"
                                     FontSize="13"
                                     VerticalContentAlignment="Center"
                                     Padding="8,0"
                                     Visibility="Collapsed"
                                     KeyDown="PasswordTextBox_KeyDown"/>
                        </Grid>

                        <CheckBox x:Name="ShowPasswordCheckBox" 
                                  Content="Show password"
                                  FontSize="11"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  Margin="0,8,0,0"
                                  Checked="ShowPasswordCheckBox_Changed"
                                  Unchecked="ShowPasswordCheckBox_Changed"/>

                        <CheckBox x:Name="RememberMeCheckBox" 
                                  Content="Remember me"
                                  FontSize="11"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  Margin="0,4,0,0"/>

                        <TextBlock x:Name="ErrorText" 
                                   Text="" 
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontSize="10"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>

                        <TextBlock x:Name="AttemptsText" 
                                   Text="" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Buttons -->
                <Grid Grid.Row="2" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="CancelButton" 
                            Grid.Column="0"
                            Content="Cancel"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource TextSecondaryBrush}"
                            Padding="12,8"
                            FontSize="12"
                            Click="CancelButton_Click"/>

                    <Button x:Name="OkButton" 
                            Grid.Column="2"
                            Content="Login"
                            Style="{StaticResource SuccessButton}"
                            Padding="12,8"
                            FontSize="12"
                            Click="OkButton_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
