<Window x:Class="MazManager.Views.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zregi Terminator" 
        SizeToContent="Height"
        MinHeight="320"
        Width="380"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        WindowStyle="None"
        ResizeMode="NoResize">

    <!-- Main Border -->
    <Border Background="#F5F5F5" BorderBrush="#707070" BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="#2196F3"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Zregi Terminator" 
                               Foreground="White" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               Margin="12,0,0,0"/>
                    
                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,4,0">
                        <Button x:Name="CloseButton" 
                                Content="X" 
                                Width="32" Height="28"
                                FontWeight="Bold"
                                Style="{StaticResource CloseButtonStyle}"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Authentication Required" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Please enter the password to continue" 
                               FontSize="11" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Password Input Card -->
                <Border Grid.Row="1" Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <TextBlock Text="Password" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,6"/>

                        <Grid Height="34">
                            <PasswordBox x:Name="PasswordInput" 
                                         FontSize="13"
                                         Padding="2,2"
                                         MinHeight="25"
                                         KeyDown="PasswordInput_KeyDown"
                                         PasswordChanged="PasswordInput_PasswordChanged"/>
                            <TextBox x:Name="PasswordTextBox"
                                     Style="{StaticResource ModernTextBox}"
                                     FontSize="13"
                                     Padding="2,2"
                                     MinHeight="25"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Visibility="Collapsed"
                                     KeyDown="PasswordTextBox_KeyDown"
                                     TextChanged="PasswordTextBox_TextChanged"/>
                        </Grid>

                        <CheckBox x:Name="ShowPasswordCheckBox" 
                                  Content="Show password"
                                  Margin="0,10,0,0"
                                  Checked="ShowPasswordCheckBox_Changed"
                                  Unchecked="ShowPasswordCheckBox_Changed"/>

                        <CheckBox x:Name="RememberMeCheckBox" 
                                  Content="Remember me"
                                  Margin="0,6,0,0"/>

                        <TextBlock x:Name="ErrorText" 
                                   Text="" 
                                   Foreground="{StaticResource ErrorBrush}"
                                   FontSize="11"
                                   Margin="0,12,0,0"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>

                        <TextBlock x:Name="AttemptsText" 
                                   Text=""
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Buttons -->
                <Grid Grid.Row="2" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="CancelButton" 
                            Grid.Column="0"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButton}"
                            Padding="12,10"
                            FontSize="12"
                            Click="CancelButton_Click"/>

                    <Button x:Name="OkButton" 
                            Grid.Column="2"
                            Content="Login"
                            Style="{StaticResource SuccessButton}"
                            Padding="12,10"
                            FontSize="12"
                            Click="OkButton_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
