<Window x:Class="MazManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medicare Protection Manager" 
        MinHeight="550" MinWidth="450"
        Height="620" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Medicare Protection Manager" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Service Management Console" 
                               FontSize="13" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Service Status Card -->
            <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Service Status" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Ellipse x:Name="StatusIndicator" 
                                     Width="12" Height="12" 
                                     Fill="{StaticResource TextSecondaryBrush}"
                                     VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusText" 
                                       Text="Checking..." 
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <Button x:Name="RefreshButton" 
                            Grid.Column="1" 
                            Content="Refresh"
                            Style="{StaticResource ModernButton}"
                            Padding="12,8"
                            Click="RefreshButton_Click"/>
                </Grid>
            </Border>

            <!-- Service Control Card -->
            <Border Grid.Row="2" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Service Control" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button x:Name="InstallButton" 
                                Grid.Row="0" Grid.Column="0"
                                Content="Install Service"
                                Style="{StaticResource SuccessButton}"
                                Padding="10,10"
                                Click="InstallButton_Click"/>

                        <Button x:Name="UninstallButton" 
                                Grid.Row="0" Grid.Column="2"
                                Content="Uninstall Service"
                                Style="{StaticResource DangerButton}"
                                Padding="10,10"
                                Click="UninstallButton_Click"/>

                        <Button x:Name="StartButton" 
                                Grid.Row="2" Grid.Column="0"
                                Content="Start Service"
                                Style="{StaticResource ModernButton}"
                                Padding="10,10"
                                Click="StartButton_Click"/>

                        <Button x:Name="StopButton" 
                                Grid.Row="2" Grid.Column="2"
                                Content="Stop Service"
                                Style="{StaticResource ModernButton}"
                                Background="{StaticResource WarningBrush}"
                                Padding="10,10"
                                Click="StopButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Configuration Card -->
            <Border Grid.Row="3" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Configuration" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,12"/>

                    <Button x:Name="ManageExeButton" 
                            Content="Manage Protected Executables"
                            Style="{StaticResource ModernButton}"
                            HorizontalAlignment="Stretch"
                            Padding="10,10"
                            Click="ManageExeButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Hardware Info Card -->
            <Border Grid.Row="4" Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="Hardware License" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Hardware Fingerprint:" 
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"/>

                    <Border Background="#FAFAFA" 
                            CornerRadius="4" 
                            Padding="8" 
                            Margin="0,5,0,8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <TextBlock x:Name="FingerprintText" 
                                   Text="Loading..." 
                                   FontFamily="Consolas"
                                   FontSize="10"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </Border>

                    <Button x:Name="CopyFingerprintButton" 
                            Content="Copy to Clipboard"
                            Style="{StaticResource ModernButton}"
                            HorizontalAlignment="Right"
                            Padding="12,8"
                            Click="CopyFingerprintButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
