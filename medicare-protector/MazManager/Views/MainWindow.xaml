<Window x:Class="MazManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zregi Terminator" 
        Height="560" Width="460"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        WindowStyle="None"
        ResizeMode="NoResize">
    
    <!-- Main Border -->
    <Border Background="{StaticResource BackgroundBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Zregi Terminator" 
                               Foreground="White" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               Margin="12,0,0,0"/>
                    
                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,4,0">
                        <Button x:Name="MinimizeButton" 
                                Content="─" 
                                Width="32" Height="28"
                                Style="{StaticResource TitleBarButton}"
                                Click="MinimizeButton_Click"/>
                        <Button x:Name="CloseButton" 
                                Content="✕" 
                                Width="32" Height="28"
                                Style="{StaticResource CloseButtonStyle}"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Zregi Terminator" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Medicare Protection Manager" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Service Status Card -->
                <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Service Status" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <Ellipse x:Name="StatusIndicator" 
                                         Width="10" Height="10" 
                                         Fill="{StaticResource TextSecondaryBrush}"
                                         VerticalAlignment="Center"/>
                                <TextBlock x:Name="StatusText" 
                                           Text="Checking..." 
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="6,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <Button x:Name="RefreshButton" 
                                Grid.Column="1" 
                                Content="Refresh"
                                Style="{StaticResource ModernButton}"
                                Padding="10,6"
                                FontSize="11"
                                Click="RefreshButton_Click"/>
                    </Grid>
                </Border>

                <!-- Service Control Card -->
                <Border Grid.Row="2" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Service Control" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button x:Name="InstallButton" 
                                    Grid.Row="0" Grid.Column="0"
                                    Content="Install Service"
                                    Style="{StaticResource SuccessButton}"
                                    Padding="8,8"
                                    FontSize="11"
                                    Click="InstallButton_Click"/>

                            <Button x:Name="UninstallButton" 
                                    Grid.Row="0" Grid.Column="2"
                                    Content="Uninstall Service"
                                    Style="{StaticResource DangerButton}"
                                    Padding="8,8"
                                    FontSize="11"
                                    Click="UninstallButton_Click"/>

                            <Button x:Name="StartButton" 
                                    Grid.Row="2" Grid.Column="0"
                                    Content="Start Service"
                                    Style="{StaticResource ModernButton}"
                                    Padding="8,8"
                                    FontSize="11"
                                    Click="StartButton_Click"/>

                            <Button x:Name="StopButton" 
                                    Grid.Row="2" Grid.Column="2"
                                    Content="Stop Service"
                                    Style="{StaticResource WarningButton}"
                                    Padding="8,8"
                                    FontSize="11"
                                    Click="StopButton_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Configuration Card -->
                <Border Grid.Row="3" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Configuration" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,10"/>

                        <Button x:Name="ManageExeButton" 
                                Content="Manage Protected Executables"
                                Style="{StaticResource ModernButton}"
                                HorizontalAlignment="Stretch"
                                Padding="8,8"
                                FontSize="11"
                                Click="ManageExeButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- Hardware Info Card -->
                <Border Grid.Row="4" Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <TextBlock Text="Hardware License" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,6"/>

                        <TextBlock Text="Hardware Fingerprint:" 
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>

                        <Border Background="#FAFAFA" 
                                CornerRadius="4" 
                                Padding="8" 
                                Margin="0,4,0,8"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1">
                            <TextBlock x:Name="FingerprintText" 
                                       Text="Loading..." 
                                       FontFamily="Consolas"
                                       FontSize="10"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>

                        <Button x:Name="CopyFingerprintButton" 
                                Content="Copy to Clipboard"
                                Style="{StaticResource ModernButton}"
                                HorizontalAlignment="Right"
                                Padding="10,6"
                                FontSize="10"
                                Click="CopyFingerprintButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
